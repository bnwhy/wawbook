# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Session
SESSION_SECRET=your-secret-key-change-in-production

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign In (Optional)
APPLE_CLIENT_ID=com.yourcompany.yourapp.web
APPLE_TEAM_ID=ABCD123456
APPLE_KEY_ID=XYZ9876543
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
Your private key content here
-----END PRIVATE KEY-----"

# Stripe (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Cloudflare R2 Storage
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=wawbook
R2_PUBLIC_URL=https://your-r2-public-domain.com

# Object Storage paths (Optional - defaults to /wawbook/public and /wawbook/private)
PUBLIC_OBJECT_SEARCH_PATHS=/wawbook/public
PRIVATE_OBJECT_DIR=/wawbook/private

# Logging (Optional)
LOG_LEVEL=info
